<div class="container text-dk px-5 py-5">
  <div class="row">
    <div class="col-12 text-center">
      <%= render "shared/flash" %>
      <a class="anchor" id="contact"></a>
      <p class="code-text mb-2" role="presentation">
        &lt;div class=&quot;contact&quot;&gt;
      </p>
      <h1 class="mb-4">
        Contact Me
      </h1>
      <p class="mb-4">
        You can send me an email using the form below:
      </p>
      <%= form_with model: @message, url: messages_create_path, class: "mb-4" do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
        </div>
        <div class="form-group">
          <%= f.text_field :email, class: "form-control", placeholder: "Email address" %>
        </div>
        <div class="form-group">
          <%= f.text_field :phone_number, class: "form-control", placeholder: "Phone number (optional)" %>
        </div>
        <div class="form-group">
          <%= f.text_area :body, class: "form-control", rows: "5", placeholder: "Message" %>
        </div>
        <div class="form-group mb-1">
          <%= f.submit "Send Email", class: "btn btn-outline-primary" %>
        </div>
        <small class="text-muted">
          I pledge to use this power only for good
        </small>
      <% end %>
      <p>
        You can also find me in the following places:
        <ul class="no-bullet">
          <li>
            <i class="fab fa-github"></i>
            <a class="link-dark" href="https://github.com/TheWillGabriel">GitHub</a>
          <li>
          <li>
            <i class="fab fa-linkedin-in"></i>
            <a class="link-dark" href="https://www.linkedin.com/in/willgabriel/">LinkedIn</a>
          </li>
          </li>
            <i class="fab fa-slack"></i>
            <a class="link-dark" href="https://devedmonton-invite.herokuapp.com/">Dev Edmonton Society Slack group</a>
          </li>
        </ul>
      </p>
      <p class="code-text" role="presentation">
        &lt;/div&gt;
      </p>
    </div>
  </div>
</div>