<div class="container">
  <h1><%= project.title %></h1>
  <p><em><%= project.description %></em></p>
</div>
<div class="container mb-4 px-4 py-3 rounded bg-lt shadow-sm text-dk">
  <p><%= markdown_text(project.more) %></p>
  <div class="d-flex justify-content-center">
  <%= image_tag "projects/#{project.image}", class: "img-fluid mb-3 rounded shadow-sm" %>
  </div>
  <div class="d-flex justify-content-center">
    <div>
      <% unless project.url == "#" %>
        <%= link_to "Website", project.url, target: "_blank", class: "btn btn-outline-primary" %>
      <% end %>
      <% unless project.source == "#" %>
        <%= link_to "GitHub", project.source, target: "_blank", class: "btn btn-outline-success" %>
      <% end %>
    </div>
  </div>
  <%= link_to 'Back to Projects', root_path(anchor: "projects"), class: "btn btn-sm btn-outline-secondary" %>
</div>
<% if admin? %>
  <%= link_to "Edit Project", edit_project_path(project.id), class: "btn btn-sm btn-info" %>
  <%= link_to "Delete Project",  project_path(project.id), method: :delete, 
                                                           data: { confirm: "Are you sure?" },
                                                           class: "btn btn-sm btn-danger" %>
<% end %>
